<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="showItemsGridPane" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.showItemsScreen.ShowItemsController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" maxWidth="10.0" minWidth="10.0" prefWidth="20.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="1000.0" prefWidth="1000.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Label fx:id="listOfItems" text="List of items:" GridPane.columnIndex="1" />
      <TableView fx:id="listOfItemsTable" prefHeight="200.0" prefWidth="10000.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <columns>
            <TableColumn id="ItemSerialNumberCol" fx:id="ItemSerialNumberCol" prefWidth="99.0" text="Serial Number" />
            <TableColumn id="NameOfItemCol" fx:id="NameOfItemCol" prefWidth="99.0" text="Name" />
            <TableColumn id="TypeOfMeasureCol" fx:id="TypeOfMeasureCol" prefWidth="118.0" text="Type of measure" />
            <TableColumn id="AmountOfStoresSellesItemCol" fx:id="AmountOfStoresSellesItemCol" prefWidth="195.0" text="Amount of Stores selles the item" />
            <TableColumn id="AveragePriceCol" fx:id="AveragePriceCol" minWidth="40.0" prefWidth="123.0" text="Average price" />
            <TableColumn id="AmountSoledFromItemCol" fx:id="AmountSoledFromItemCol" minWidth="40.0" prefWidth="200.0" text="Amount soled from item" />
         </columns>
      </TableView>
   </children>
</GridPane>
