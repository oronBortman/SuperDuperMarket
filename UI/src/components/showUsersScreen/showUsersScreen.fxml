            <TableColumn id="LocationCol" fx:id="LocationCol" prefWidth="118.0" text="Location" />
            <TableColumn id="AmountOfOrdersCol" fx:id="AmountOfOrdersCol" prefWidth="195.0" text="Amount of orders" />
            <TableColumn id="AverageOrderPriceCol" fx:id="AverageOrderPriceCol" minWidth="40.0" prefWidth="123.0" text="Average orders price" />
            <TableColumn id="AverageDeliveryPrice" fx:id="AverageDeliveryPrice" minWidth="40.0" prefWidth="200.0" text="Average deliveries price" />
         </columns>
      </TableView>
   </children>
</GridPane>
